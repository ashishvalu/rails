<h1>Publishers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publishers.each do |publisher| %>
      <tr>
        <td><%= publisher.name %></td>
        <td><%= publisher.email %></td>
        <td><%= publisher.phone %></td>
        <td><%= publisher.website %></td>
        <td><%= link_to 'Show', publisher, class:"btn btn-outline-primary"%></td>
        <td><%= link_to 'Edit', edit_publisher_path(publisher),class:"btn btn-outline-dark"%></td>
        <td><%= link_to 'Destroy', publisher, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
