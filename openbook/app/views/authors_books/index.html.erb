<p id="notice"><%= notice %></p>

<h1>Authors Books</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Book</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors_books.each do |authors_book| %>
      <tr>
        <td><%= authors_book.book_id %></td>
        <td><%= authors_book.author_id %></td>
        <td><%= link_to 'Show', authors_book ,class:"btn btn-outline-primary"%></td>
        <td><%= link_to 'Edit', edit_authors_book_path(authors_book),class:"btn btn-outline-dark" %></td>
        <td><%= link_to 'Destroy', authors_book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Authors Book', new_authors_book_path,class: 'btn btn-outline-primary' %>
