<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Publisher</th>
      <th>Categary</th>
      <th>Isbn10</th>
      <th>Isbn13</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.price %></td>
        <td><%= book.Publisher_id %></td>
        <td><%= book.categary_id %></td>
        <td><%= book.isbn10 %></td>
        <td><%= book.isbn13 %></td>
        <td><%= book.language %></td>
        <td><%= link_to 'Show', book  ,class:"btn btn-outline-primary"%></td>
        <td><%= link_to 'Edit', edit_book_path(book),class:"btn btn-outline-dark" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path,class: 'btn btn-outline-primary'%>
