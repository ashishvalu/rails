<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table class='table table-hover'>
  <thead >
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.email %></td>
        <td><%= author.phone %></td>
        <td><%= author.website %></td>
        <td><%= link_to 'Show', author ,class:"btn btn-outline-primary"%></td>
        <td><%= link_to 'Edit', edit_author_path(author) ,class:"btn btn-outline-dark"%></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-outline-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path, class: 'btn btn-outline-primary'%>
